

@model IEnumerable<Dominio.Planta>

@{
    ViewData["Title"] = "Index";
}


@{
    ViewData["Title"] = "Listar Planta";
}

<table>
    <thead>
        <tr>
            <td>NombreCientifico</td>
            <td>NombreVulgar</td>
            <td>Descripcion</td>
            <td>Ambiente</td>
            <td>AlturaMax</td>
            <td>Fecha Nacimiento</td>
            <td>Precio</td>
            <td></td>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCientifico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreVulgar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ambiente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlturaMax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
            </tr>
        }
    </tbody>

</table>
