@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>


<div class="container">
    <div class="row justify-content-center">
        <div class="col col-sm-8">
            <p>Para acceder a la gestión del Vivero, primero debe autenticarse:</p>
            <form>
                <div class="form-group">
                    <label for="txtUserEmail">Usuario</label>
                    <input type="email" class="form-control" id="txtUserEmail" placeholder="Nombre de usuario">
                </div>
                <div class="form-group">
                    <label for="txtPassword">Contraseña</label>
                    <input type="password" class="form-control" id="txtPassword" placeholder="Contraseña">
                </div>
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </form>
        </div>
    </div>
</div>
