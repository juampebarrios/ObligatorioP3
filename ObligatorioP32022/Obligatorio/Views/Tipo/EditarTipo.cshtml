@model Dominio.TipoPlanta

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarTipo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="NombreUnico" class="control-label"></label>
                <input asp-for="NombreUnico" class="form-control" disabled/>
                <span asp-validation-for="NombreUnico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionTipo" class="control-label"></label>
                <input asp-for="DescripcionTipo" class="form-control" />
                <span asp-validation-for="DescripcionTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
