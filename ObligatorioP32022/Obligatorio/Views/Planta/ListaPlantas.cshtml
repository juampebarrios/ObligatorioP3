@model IEnumerable<Dominio.Planta>

@{
    ViewData["Title"] = "Listado de Plantas";
}

    <div class="row justify-content-center">
        <div class="col col-sm-8 col-lg-10">
            <h1>@ViewData["Title"]</h1>

            <div class="form-group"> 
                    <select class="form-control col col-sm-4">
                        <option value="nombreC">Nombre Científico</option>
                        <option value="nombreV">Nombre Vulgar</option>
                    </select>
                <div class="input-group mb-3 col col-sm-4">
                    <input type="text" class="form-control" id='txtSearchPlant' placeholder="Ingrese búsqueda...">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" id="btnSearchPlant" type="button">Buscar</button>
                    </div>
                </div>
            </div>



            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre Científico</th>
                        <th>Nombre Vulgar</th>
                        <th>Descripción</th>
                        <th>Ambiente</th>
                        <th>Altura Máx</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreCientifico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreVulgar)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ambiente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlturaMax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>