@model IEnumerable<Dominio.Planta>

@{
    ViewData["Title"] = "Listado de Plantas";
}

    <div class="row justify-content-center">
        <div class="col col-sm-8 col-lg-10">
            <h1>@ViewData["Title"]</h1>

            <form action="~/Planta/ListaPlantas" method="get">
                <div class="form-group row justify-content-center mt-3">
                    <select name="id" class="form-control col col-sm-3" id="selSearchPlant">
                        <option value="">Seleccione...</option>
                        <option value="0">Nombre Científico</option>
                        <option value="1">Nombre Vulgar</option>
                    </select>
                    <div class="input-group mb-2 col col-sm-6">
                        <input type="text" class="form-control" name="texto" id='txtSearchPlant' placeholder="Ingrese búsqueda...">
                        <div class="input-group-append">
                            <button class="btn btn-primary" id="btnSearchPlant" type="button">Buscar</button>
                        </div>
                    </div>
                </div>
            </form>

            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre Científico</th>
                        <th>Nombre Vulgar</th>
                        <th>Descripción</th>
                        <th>Ambiente</th>
                        <th>Altura Máx</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreCientifico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreVulgar)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ambiente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlturaMax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
    $('#btnSearchPlant').click(function () {
        let valueSel = $('#selSearchPlant').val();
        let valueText = $('#txtSearchPlant').val();

        callSearch(valueSel, valueText);
    });

    async function callSearch(valueSel, valueText) {
        await $.ajax({
            url: '@Url.Action("ListaPlantasBusqueda","PlantaController")',
            @*url: 'PlantaController/ListaPlantasBusqueda',*@
            type: 'GET',
            contentType: 'application/json;',
            data: JSON.stringify({ id: valueSel, texto: valueText }),
            success: function (valid) {
                if (valid) {
                    console.log('valido')
                } else {
                    console.log('invalido')
                }
            },
            error: function (e) {
                console.log(e);
            }
        });
    }
    </script>